<body class="bg-main ">
    <div class="d-flex justify-content-center job-show">
        <div class="card mb-3" style="width:50rem;">
            <h3 class="card-header text-center">Edit Comment</h3>
            <div class="card-body">                   
                <div class="container">
                    <%= form_for([@company, @comment],remote: true) do |f| %>
                        <%= f.text_area :content, class:'form-control'%>
                        <%= f.submit 'Recomment', class:'btn btn-primary'%>
                    <% end %>
                </div>                           
            </div>
        </div>
    </div>  
</body>