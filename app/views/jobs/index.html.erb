<section>
  
  <div class="container mb-3 mt-5 ">
  <h3 class=" mt-3">All jobs</h3>
    <div class="row ">
        <div class="col-md-6 ">
            <% @jobs.each do |job| %>
                <div class="card apply-card mt-5 animated slideInUp ml-3" style="width:50rem;">
                    <div class="row">
                        <div class="col-md-6">
                            
                            <div class="card-body"> 
                                <div class="ml-3 mt-2 text-uppercase font-weight-bold  text-main"><%= job.job_type%></div>
                                <div class="ml-3 mt-2 text-capitalize font-weight-bold"><%= job.title%></div>
                                <div class='ml-3 mt-3'><%= job.company.email%> ,&nbsp;&nbsp;&nbsp;&nbsp;  <%= job.location%></div>
                                <%= link_to  "Details...", job ,class:'btn btn-light mt-2 ml-3' %>
                            </div>
                            
                        </div>
                        <div class="col-md-6">
                        <%= link_to  "Apply", new_request_path(job_id: job.id),method: :post ,class:'btn btn-primary btn-lg mt-5 apply-btn' %>
                        </div>
                    </div>
                </div>
            <%end%>
        </div>
    </div>
  </div>
</section>
